<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:theme="@style/AppTheme"
    tools:context="br.edu.ladoss.simpifladoss.view.activities.EnterActivity">


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fundo"
            android:gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/email_login_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/logotipo"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/simpif_logo" />

                    <EditText
                        android:id="@+id/identificadorEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:autoText="true"
                        android:background="@drawable/edit_text_white_top"
                        android:hint="E-mail"
                        android:imeActionId="@+id/login"
                        android:imeOptions="actionNext|actionUnspecified"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/gelo"
                        android:textColorHint="@color/gelo"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>

                    <EditText
                        android:id="@+id/passwordEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_white_bottom"
                        android:hint="Senha"
                        android:imeActionId="@+id/login"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/gelo"
                        android:textColorHint="@color/gelo"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>

                    <Button
                        android:id="@+id/loginButton"
                        style="@style/buttomLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:onClick="doLogin"
                        android:text="Login"
                        android:textStyle="bold"
                        android:translationZ="3dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>